<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
  <appender userName="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M:%L - %m%n</pattern>
    </encoder>
  </appender>

  <appender userName="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>admin.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
      <fileNamePattern>admin.%i{yyyy-MM-dd}.log</fileNamePattern>
      <minIndex>1</minIndex>
      <maxIndex>10</maxIndex>
    </rollingPolicy>
    <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
      <maxFileSize>5MB</maxFileSize>
    </triggeringPolicy>
    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36}.%M:%L - %m%n</pattern>
    </encoder>
  </appender>
  <logger userName="ru.ajana.admin" level="INFO"/>
  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <!--<appender-ref ref="FILE"/>-->
  </root>
</configuration>